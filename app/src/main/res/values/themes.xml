<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingLists" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="actionModeBackground">@color/green</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseButtonStyle">@style/BackButton</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/white</item> <!-- whatever color -->
    </style>

</resources>